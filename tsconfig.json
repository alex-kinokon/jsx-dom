{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "preserve",
    "jsxImportSource": "./esm",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "sourceMap": false,
    "target": "ES2021",
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "coverage", "drafts", "alias", "lib"]
}
